
@{
    ViewData["Title"] = "UserProfiles";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Patpedhi.Infrastructure.Identity.ApplicationUser user = ViewBag.loggedinuser;
    string loggedinuserrole = ViewBag.loggedinuserroles;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        User Profiles
        <small>List of All Users</small>
    </h1>
    @*<ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>*@
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Users</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="users" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>DOB</th>
                                <th>Role</th>
                                <th>Is Approved</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>DOB</th>
                                <th>Role</th>
                                <th>Is Approved</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function(){

        $('#users').dataTable({
        "processing": true,
        "pagingType": "full_numbers",
        "ajax": {
        "url": '@Url.Action("GetUsers")',
        "type": "POST",
        "data": function (d) {
            d.role = '@loggedinuserrole'
        }
        },
        "columns": [
        { data: 'first_name' },
        { data: 'last_name' },
        { data: 'date_of_birth_string' },
        { data: 'role_string' },
            { data: 'is_approved_string' },
            { data: 'user_id' },
            { data: 'user_id' }
        ]
        });

        });
    </script>
}