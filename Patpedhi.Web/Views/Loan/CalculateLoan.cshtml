
@{
    ViewData["Title"] = "Calculate Loan";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Patpedhi.Infrastructure.Identity.ApplicationUser user = ViewBag.loggedinuser;
    string loggedinuserrole = ViewBag.loggedinuserroles;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Loan
        <small>Calculate Loan</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active">Loan</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Loan</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="calculator"></div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".calculator").accrue({
                mode: "amortization"
            });
        });
    </script>
}