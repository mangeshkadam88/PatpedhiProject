
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Patpedhi.Infrastructure.Identity.ApplicationUser user = ViewBag.loggedinuser;
    string loggedinuserrole = ViewBag.loggedinuserroles;
    Patpedhi.Infrastructure.Identity.ApplicationUser selected_user = ViewBag.selecteduser;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Savings
        <small>List of All Selected User savings</small>
    </h1>
    <ol class="breadcrumb">
            <li><a href="/UsersSavings/"><i class="fa fa-user"></i> Savings users</a></li>
            <li class="active">List</li>
        </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Savings</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row row-break">
                        <div class="col-sm-4">
                            <select id="ddl_filter" class="form-control">
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                    </div>
                    <div class="row row-break">
                        <div class="col-sm-6">
                            <strong>User Name </strong> - @selected_user.UserProfile.full_name
                        </div>
                        <div class="col-sm-6">
                            <strong>Account No </strong> - @selected_user.UserProfile.account_no
                        </div>
                    </div>
                    <div class="row row-break">
                        <div class="col-sm-6">
                            <a href="/Savings/Save/@selected_user.Id" class="btn btn-primary">Add</a>
                        </div>
                        <div class="col-sm-6">
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="savings" class="table responsive table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Amount</th>
                                        <th>Date</th>
                                        <th>Is Approved</th>
                                        <th>Approved By</th>
                                        <th>Approved On</th>
                                        <th>Is Active</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Amount</th>
                                        <th>Date</th>
                                        <th>Is Approved</th>
                                        <th>Approved By</th>
                                        <th>Approved On</th>
                                        <th>Is Active</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            var show_notification = '@TempData["ShowNotification"]';
            if (show_notification) {
                toastr.success(show_notification);
            }

            $('#savings').dataTable({
                "processing": true,
                "pagingType": "full_numbers",
                "aaSorting": [],
                "ajax": {
                "url": '@Url.Action("GetUsersSavings")',
                "type": "POST",
                "data": function (d) {
                    d.role = '@loggedinuserrole',
                    d.filter = $('#ddl_filter').val(),
                    d.selected_user_id = '@selected_user.Id'
                }
                },
                "columns": [
                    { data: 'amount_string' },
                    { data: 'modified_date_string' },
                    { data: 'is_approved_string' },
                    { data: 'approved_by' },
                    { data: 'approved_on' },
                    { data: 'is_active_string' },
                    { data: 'saving_id' },
                    { data: 'saving_id' },
                ],
                "columnDefs": [
                    {
                        "render": function (data, type, row) {
                            return '<a href=\"/Savings/Save/@selected_user.Id/'+ data +'\" class=\"btn btn-primary\" title=\"Edit Saving\" ><i class=\"fa fa-pencil\" ></i>&nbsp;Edit</a>';
                        },
                        "searchable": false,
                        "orderable": false,
                        "targets": 6
                    },
                    {
                        "render": function (data, type, row) {
                            if (row['is_active_string'] == 'True') {
                                return '<a href=\"/Savings/SetActive/@selected_user.Id/' + data + '/false\" class=\"btn btn-danger\" title=\"Delete\" onclick=\"return confirm(\'Are you sure want to delete this users saving?\')\" ><i class=\"fa fa-trash\" ></i>&nbsp;Delete</a>';
                            }
                            else {
                                return '<a href=\"/Savings/SetActive/@selected_user.Id/' + data + '/true\" class=\"btn btn-success\" title=\"Set Active\" onclick=\"return confirm(\'Are you sure want to set active this users saving?\')\" ><i class=\"fa fa-check\" ></i>&nbsp;Active</a>';
                            }
                        },
                        "searchable": false,
                        "orderable": false,
                        "targets": 7
                    }
                ]
            });

            $('#ddl_filter').on('change', function () {
                var table = $('#savings').DataTable();
                table.ajax.reload(function (data) {
                    table.columns.adjust().responsive.recalc();
                }, false);
            });
        });
    </script>

}