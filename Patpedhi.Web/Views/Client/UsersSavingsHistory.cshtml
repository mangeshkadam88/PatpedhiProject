
@{
    ViewData["Title"] = "Users Savings History";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Patpedhi.Infrastructure.Identity.ApplicationUser user = ViewBag.loggedinuser;
    string loggedinuserrole = ViewBag.loggedinuserroles;
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Savings
        <small>List of All savings</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active">List</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Savings</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="savings" class="table responsive table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {

            $('#savings').dataTable({
                "processing": true,
                "pagingType": "full_numbers",
                "aaSorting": [],
                "ajax": {
                "url": '@Url.Action("GetCurrentUsersSavings")',
                "type": "POST",
                "data": function (d) {
                    d.selected_user_id = '@user.Id'
                }
                },
                "columns": [
                    { data: 'amount_string' },
                    { data: 'modified_date_string' }
                ]
            });
        });
    </script>

}

